<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_dark">

    <!-- Toolbar với nút back -->
    <LinearLayout
        android:id="@+id/toolbar_nap"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="16dp"
        android:background="@color/surface_dark">

        <!-- Nút back (mũi tên trái) -->
        <ImageView
            android:id="@+id/btn_back_nap"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_arrow_back"
            android:tint="@color/text_primary"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:padding="12dp"
            tools:ignore="UseAppTint" />

        <!-- Tiêu đề -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ngủ bù"
            android:textColor="@color/text_primary"
            android:textSize="20sp"
            android:fontFamily="sans-serif-medium"
            android:layout_marginStart="16dp" />
    </LinearLayout>

    <!-- Nội dung chính (ScrollView) -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/toolbar_nap"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="24dp">

            <!-- Avatar mèo ngủ lớn + glow + Zzz float -->
            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:layout_marginBottom="40dp">

                <!-- Glow tím lớn hơn -->
                <View
                    android:layout_width="320dp"
                    android:layout_height="320dp"
                    android:background="@drawable/cat_glow_large"
                    android:layout_gravity="center" />

                <!-- Avatar mèo ngủ -->
                <ImageView
                    android:layout_width="300dp"
                    android:layout_height="300dp"
                    android:src="@drawable/ic_cat_nap"
                    android:scaleType="centerCrop"
                    android:layout_gravity="center"
                    android:background="@drawable/cat_avatar_background_large" />

                <!-- Zzz float -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Zzz..."
                    android:textColor="@color/text_primary"
                    android:textSize="36sp"
                    android:layout_gravity="top|end"
                    android:layout_marginTop="40dp"
                    android:layout_marginEnd="60dp" />
            </FrameLayout>

            <!-- Timer lớn -->
            <TextView
                android:id="@+id/tv_timer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="20:00"
                android:textColor="@color/text_primary"
                android:textSize="80sp"
                android:fontFamily="sans-serif-black"
                android:layout_marginBottom="16dp" />

            <!-- Badge báo thức -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:background="@drawable/badge_sleep_good"
                android:paddingHorizontal="16dp"
                android:paddingVertical="8dp"
                android:layout_marginBottom="40dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Báo thức lúc 14:30"
                    android:textColor="@color/primary_light"
                    android:textSize="16sp" />
            </LinearLayout>

            <!-- Nút chọn thời gian -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginBottom="40dp">

                <Button
                    android:id="@+id/btn_15"
                    android:layout_width="0dp"
                    android:layout_height="80dp"
                    android:layout_weight="1"
                    android:text="15\nPhút"
                    android:textSize="18sp"
                    android:background="@drawable/btn_normal"
                    android:textColor="@color/text_secondary"
                    android:layout_marginEnd="12dp" />

                <Button
                    android:id="@+id/btn_20"
                    android:layout_width="0dp"
                    android:layout_height="80dp"
                    android:layout_weight="1"
                    android:text="20\nPhút"
                    android:textSize="18sp"
                    android:background="@drawable/btn_selected"
                    android:textColor="@color/text_primary"
                    android:layout_marginHorizontal="12dp" />

                <Button
                    android:id="@+id/btn_30"
                    android:layout_width="0dp"
                    android:layout_height="80dp"
                    android:layout_weight="1"
                    android:text="30\nPhút"
                    android:textSize="18sp"
                    android:background="@drawable/btn_normal"
                    android:textColor="@color/text_secondary"
                    android:layout_marginStart="12dp" />
            </LinearLayout>

            <!-- Nút Bắt đầu/Tạm dừng -->
            <Button
                android:id="@+id/btn_start_pause"
                android:layout_width="match_parent"
                android:layout_height="72dp"
                android:text="Bắt đầu ngủ"
                android:textSize="20sp"
                android:textColor="@color/primary"
                android:background="@drawable/btn_start"
                android:layout_marginBottom="100dp" />

        </LinearLayout>
    </ScrollView>
</RelativeLayout>